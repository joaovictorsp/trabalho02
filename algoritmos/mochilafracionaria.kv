#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<MyScreenManager>:
	id:screen_manager
	FirstScreen:
		id:first_screen
	SecondScreen:

<FirstScreen>:
	name:'first'
	BoxLayout:
		orientation:'vertical'
		padding:[20,20,20,20]
		spacing:10

		Label:
			text:'Capacidade da mochila'
			font_size:50
		TextInput:
			text:'0'
			write_tab: False
			font_size:50
			multiline:False
			id:my_cap

		Button:
			id:my_bt
			text:'OK'
			font_size:50
			on_release:root.setaCap()
		Button:
			id:my_bt0
			text:'Proximo'
			font_size:50
			on_release:app.root.current='second'

<SecondScreen>:
	id:my_second
	name:'second'
	BoxLayout:
		orientation:'vertical'
		Label:
			font_size:50
			text:'Valor:'
		TextInput:
			id:my_val
			write_tab: False
			font_size:50
			multiline:False
			text:'0'

		Label:
			font_size:50
			text:'Peso:'
		TextInput:
			font_size:50
			id:my_peso
			write_tab: False
			multiline:False
			text:'0'
		Button:
			id:my_bt1
			text:'Insere'
			font_size:50
			on_release:root.Insere()
		Button:
			id:my_bt2
			text:'Resolve'
			font_size:50
			on_release:root.Resolve()

		AnchorLayout:
			anchor_x:'center'
			anchor_y:'bottom'
			Button:
				id:my_bt3
				size_hint:[1,1]
				text:'Proximo'
				font_size:50
				on_release: app.root.current = 'third'


<ThirdScreen>:
	name:'third'
	BoxLayout:
		orientation: 'vertical'
		spacing:10
		padding:20

		Label:
			id:my_imprime
			font_size:50
			text:''

		Button:
			text:'Imprime'
			font_size:50
			on_release:root.Imprime()
